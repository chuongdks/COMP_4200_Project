<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical"
    tools:context=".database.ExerciseDatabaseActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:padding="8dp"
        android:text="@string/notice_title"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/style_view_grey"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:gravity="left"
        android:hint="Enter a title"
        android:inputType="text"
        android:padding="16dp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:padding="8dp"
        android:text="@string/notice_description"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/style_view_grey"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:gravity="left"
        android:hint="Enter a description"
        android:inputType="text"
        android:padding="16dp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="187dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:padding="8dp"
        android:text="@string/notice_group"
        android:textColor="@color/textColor"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_muscle"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/style_view_grey"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:gravity="left"
        android:hint="Enter the muscle group"
        android:inputType="text"
        android:padding="16dp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="187dp" />

    <Button
        android:id="@+id/bt_add"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/style_button_linear"
        android:fontFamily="@font/inter_bold"
        android:text="ADD VALUE"
        android:textColor="@color/black"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/bt_edit"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/style_button_linear"
        android:fontFamily="@font/inter_bold"
        android:text="EDIT VALUE"
        android:textColor="@color/black"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/bt_delete"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/style_button_linear"
        android:fontFamily="@font/inter_bold"
        android:text="DELETE VALUE"
        android:textColor="@color/black"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/bt_display"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/style_button_linear"
        android:fontFamily="@font/inter_bold"
        android:text="DISPLAY VALUE"
        android:textColor="@color/black"
        app:backgroundTint="@null" />


</LinearLayout>